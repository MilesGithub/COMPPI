{# src/Comppi/ProteinSearchBundle/Resources/views/index.html.twig #}
{% extends '::base.html.twig' %}

{% block title %}ComPPI - Select Protein - The Compartmentalized Protein-Protein Interaction Database{% endblock %}

{% block bundlecontent %}
	{% include 'ComppiProteinSearchBundle:ProteinSearch:searchform.html.twig' %}
	
	<p class="help">Multiple proteins were found, please select one to see its interactions.</p>
	
	{% if ls %}
	<div class="center">
	<table id="ProteinSearchSelectorTbl" class="rounded_table hovered_list">
		<tr id="ProtSearchSelectorHeader" class="not_hovered_line">
			<th>Name</th>
			<th>UniProt Profile</th>
			<th>Species</th>
			<th>Details</th>
		</tr>
		{% for p in ls %}
		<tr>
			<td>{{ p.name }}</td>
			<td><a href="{{ p.uniprot_link }}" target="_blank">{{ p.name2 }} <img src="{{ asset('assets/linkout.png') }}" alt="Link to Uniprot" /></a></td>
			<td class="taxonomic_name">{{ p.species }}</td>
			<td><a href="{{ path('ComppiProteinSearchBundle_interactors', {'comppi_id': p.comppi_id }) }}">Details</a></td>
		</tr>
		{% endfor %}
	</table>
	</div>
	{% endif %}

{% endblock %}
