<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}Stat{% endblock %} | Stat | ComPPI</title>
        {% block stylesheetAssets %}
            {% stylesheets
                '@StatBundle/Resources/public/css/bootstrap.min.css'
                '@StatBundle/Resources/public/css/bootstrap-responsive.min.css'
                '@StatBundle/Resources/public/css/layout.less'
            %}
            <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}
        {% block javascriptAssets %}{% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        {% include '::google_analytics.html.twig' %}
    </head>
    <body>
        <div class="container">
        {% set controller = app.request.attributes.get('_template').get('controller') %}
        <div class="navbar">
          <div class="navbar-inner">
            <a class="brand" href="{{ path('stat_index_index') }}">ComPPI<span class="text-success">Stat</span></a>
              <ul class="nav">
                <li{% if controller == 'SourceStat'%} class="active"{% endif %}><a href="{{ path('stat_source_index') }}">Sources</a></li>
                <li{% if controller == 'LocalizationStat'%} class="active"{% endif %}><a href="{{ path('stat_localization_index') }}">Localizations</a></li>
                <li{% if controller == 'InteractionStat'%} class="active"{% endif %}><a href="{{ path('stat_interaction_index') }}">Interactions</a></li>
                <li{% if controller == 'NamingStat'%} class="active"{% endif %}><a href="{{ path('stat_naming_index') }}">Naming conventions</a></li>
                <li{% if controller == 'Download'%} class="active"{% endif %}><a href="{{ path('stat_download_index') }}">Download</a></li>
                {# <li{% if controller == 'Search'%} class="active"{% endif %}><a href="{{ path('stat_search_index') }}">Search</a></li> #}
                
                
                <li class="navbar-search-item">
                <form class="navbar-form pull-right" method="GET" action="{{ path('stat_search_search') }}">
                  <input type="text" name="form[searchTerm]" class="navbar-search-input" placeholder="Search">
                </form>
                </li>
                
              </ul>
          </div>
        </div><!-- /.navbar -->
        
        {% block subnav %}{% endblock %}

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
        </div>
    </body>
</html>
