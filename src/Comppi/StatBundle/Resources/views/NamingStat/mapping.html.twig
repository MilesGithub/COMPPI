{% extends 'StatBundle:NamingStat:container.html.twig' %}

{% block title %}Mappings{% endblock %}

{% block body %}

{% for specieName, mapStat in mapStats %}
    <div class="headline">
        <h2>{{ specieName }}</h2><h3> - Available Maps</h3>
    </div>
    
    {% if mapStat %}
        <table>
            <thead>
                <tr>
                    <td>{% trans %}Naming Convention A{% endtrans %}</td>
                    <td>{% trans %}Naming Convention B{% endtrans %}</td>
                    <td class="tcell-numeric">{% trans %}Protein Count{% endtrans %}</td>
                </tr> 
            </thead>
            <tbody>
        {% for stat in mapStat %}
            <tr>
                <td>{{ stat.namingConventionA }}</td>
                <td>{{ stat.namingConventionB }}</td>
                <td class="tcell-numeric">{{ stat.proteinCount }}</td>
            </tr>    
        {% endfor %}
        </table>
    {% else %}
        <div class="message message-notice">
        {% trans %}
        No map source found
        {% endtrans %}
        </div>
    {% endif %}
{% endfor %}

{% endblock %}